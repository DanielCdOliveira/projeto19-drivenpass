// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  credentials Credential[]
  notes       Note[]
  cards       Card[]
  Wifi        Wifi[]
  Document    Document[]
  @@map("users")
}

model Credential {
  id       Int    @id @default(autoincrement())
  title    String
  url      String
  userName String
  password String
  userId   Int
  creator  User   @relation(fields: [userId], references: [id])

  @@unique([title, userId])
  @@map("credentials")
}

model Note {
  id      Int    @id @default(autoincrement())
  title   String
  text    String
  userId  Int
  creator User   @relation(fields: [userId], references: [id])

  @@unique([title, userId])
  @@map("notes")
}

model Card {
  id             Int       @id @default(autoincrement())
  title          String
  cardNumber     String
  cardName       String
  cvc            String
  expirationDate String
  password       String
  isVirtual      Boolean
  cardType       CardTypes
  userId         Int
  creator        User      @relation(fields: [userId], references: [id])

  @@unique([title, userId])
  @@map("cards")
}

model Wifi {
  id       Int    @id @default(autoincrement())
  title    String
  wifiName String
  password String
  userId   Int
  creator  User   @relation(fields: [userId], references: [id])

  @@map("wifiConnections")
}

model Document {
  id               Int           @id @default(autoincrement())
  name             String
  expeditionDate   String
  expirationDate   String
  registerNumber   String
  expeditionAgency String
  documentType     DocumentTypes
  userId           Int
  creator          User          @relation(fields: [userId], references: [id])

  @@unique([documentType, userId])
  @@map("documents")
}

enum CardTypes {
  credit
  debit
  credit_debit
}

enum DocumentTypes {
  cnh
  rg
}
